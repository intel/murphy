-config_DATA   = $(shell ls daemon/sample-config/*.{cfg,rules})
+config_DATA   = daemon/murphy.lua daemon/murphy.conf
 
 murphyd_SOURCES =			\
 		daemon/daemon.c		\
@@ -1541,7 +1541,7 @@ murphyd_LDFLAGS = -rdynamic
 
