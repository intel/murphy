 	rm -f $(DESTDIR)/$(sysconfdir)/murphy/murphy.cfg
-	echo "load-plugin lua config=\"$(sysconfdir)/murphy/main.cfg\"" \
+	echo "load-plugin lua config=\"$(sysconfdir)/murphy/murphy.lua\"" \
 	    > $(DESTDIR)/$(sysconfdir)/murphy/murphy.conf
 
