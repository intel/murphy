diff --git a/src/Makefile.am b/src/Makefile.am
index 7fcc1da..1b849a4 100644
--- a/src/Makefile.am
+++ b/src/Makefile.am
@@ -1503,7 +1503,7 @@ endif
 bin_PROGRAMS += murphyd
